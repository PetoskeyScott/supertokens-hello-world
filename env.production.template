# Production Environment Variables
# Copy this file to .env.production and fill in your values

# PostgreSQL root password (for the main PostgreSQL instance)
POSTGRES_ROOT_PASSWORD=your_root_password_here

# Database user passwords
SUPERTOKENS_PASSWORD=your_supertokens_user_password_here
APP_PASSWORD=your_app_user_password_here

# Frontend configuration (update with your actual frontend URL)
FRONTEND_URL=https://your-frontend-domain.com
API_DOMAIN=https://your-api-domain.com
WEBSITE_DOMAIN=https://your-frontend-domain.com

# SuperTokens configuration
SUPERTOKENS_CONNECTION_URI=https://your-supertokens-domain.com:3567

# Optional: Add any other environment variables your app needs
