# Default behavior: auto-detect text files and normalize to LF in repo
* text=auto

# Explicitly set text files to LF (common project files)
*.js     text eol=lf
*.ts     text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.py     text eol=lf
*.sql    text eol=lf
Dockerfile text eol=lf
*.dockerignore text eol=lf
.env     text eol=lf
*.env.*  text eol=lf

# Windows-specific scripts keep CRLF
*.bat    text eol=crlf
*.cmd    text eol=crlf
*.ps1    text eol=crlf

# Binary files should never be modified
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.zip    binary
*.gz     binary
*.tar    binary
*.tgz    binary
*.exe    binary
*.dll    binary
